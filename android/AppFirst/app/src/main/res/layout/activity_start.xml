<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gamestart"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20pt">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30pt"
            android:text="玩家："
            android:textSize="10pt"
            android:textColor="@color/colorYellow"/>

        <TextView
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tip"
            android:layout_alignBottom="@+id/tip"
            android:layout_toEndOf="@+id/tip"
            android:layout_toRightOf="@+id/tip"
            android:id="@+id/player"
            android:textColor="@color/colorDarkOrange"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35pt"
        android:layout_marginRight="35pt"
        android:layout_marginTop="80pt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/layout_shape">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_click"
            android:textColor="@color/colorGray"
            android:text="开   始   游   戏"
            android:id="@+id/start"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35pt"
        android:layout_marginRight="35pt"
        android:layout_marginTop="20pt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/layout_shape">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textColor="@color/colorGray"
            android:text="退   出   游   戏"
            android:id="@+id/end"
            />
    </RelativeLayout>
</LinearLayout>