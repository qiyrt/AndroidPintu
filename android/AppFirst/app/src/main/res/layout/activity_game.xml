<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--计时器：https://blog.csdn.net/nxiangbo/article/details/50517109-->


    <RelativeLayout
        android:layout_height="20pt"
        android:layout_width="match_parent"
        android:background="#456789">

    <TextView
        android:layout_height="20pt"
        android:layout_width="80pt"
        android:textSize="14pt"
        android:textColor="@color/colorDarkOrange"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/timer"/>

    <Button
        android:layout_height="20pt"
        android:layout_width="30pt"
        android:text="暂停"
        android:layout_alignParentTop="true"
        android:id="@+id/stop"
        android:layout_toRightOf="@+id/timer"
        android:layout_toEndOf="@+id/timer"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"/>

    <Button
        android:layout_height="20pt"
        android:layout_width="30pt"
        android:text="继续"
        android:layout_alignParentTop="true"
        android:id="@+id/go_on"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30pt"
        android:paddingBottom="30pt"
        android:background="@color/colorBlue">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/ib_00_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_00x00" />

            <ImageButton
                android:id="@+id/ib_00_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_00x01" />

            <ImageButton
                android:id="@+id/ib_00_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_00x02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43pt">

            <ImageButton
                android:id="@+id/ib_01_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_01x00" />

            <ImageButton
                android:id="@+id/ib_01_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_01x01" />

            <ImageButton
                android:id="@+id/ib_01_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_01x02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="86pt">

            <ImageButton
                android:id="@+id/ib_02_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_02x00" />

            <ImageButton
                android:id="@+id/ib_02_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_02x01" />

            <ImageButton
                android:id="@+id/ib_02_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@mipmap/img_liuyifei_02x02" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130pt">
            <Button
                android:id="@+id/go_back"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/colorLightOrange"
                android:text="退 出 游 戏"
                android:textColor="@color/colorGray"
                android:textSize="12pt" />
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>